@model List<Product>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6" text-end>
            <a asp-controller="Product" asp-action="UpSert" class="btn btn-primary">
            Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Book Id
            </th>
            <th>
                Book Title
            </th>
            <th>
                Book Summary
            </th>
            <th>
                ISBN
            </th>
            <th>
                Book Author
            </th>
            <th>
                Book Price
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Title</td>
                <td>@obj.Description</td>
                <td>@obj.ISBN</td>
                <td>@obj.Author</td>
                <td>@obj.ListPrice</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="UpSert" asp-route-id="@obj.Id" class="btn btn-edit mx-2">
                            Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-delete mx-2">
                            Delete
                        </a>
                    </div>
                </td>
            
            </tr>

            
        }

    </tbody>


</table>